    "react-dom": "18.2.0",
    "react-qr-reader": "^3.0.0-beta-1"
  },
  "devDependencies": {
    "@testing-library/react": "14.3.1",
    "@types/jest": "29.5.14",
    "@types/node": "18.19.74",
    "@types/react": "18.2.31",
    "eslint": "8.57.1",
    "eslint-config-next": "13.3.0",
    "husky": "8.0.3",
    "jest": "27.5.1",
    "lint-staged": "13.2.3",
    "prettier": "3.5.0",
    "stylelint": "15.11.0",
    "stylelint-config-recommended": "13.0.0",
    "ts-jest": "29.2.5",
    "typescript": "5.7.3"
  }
